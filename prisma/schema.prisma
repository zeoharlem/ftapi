generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model FieldTypes {
  types String @unique @db.VarChar(255)
}

model FormField {
  id         Int     @id @default(autoincrement())
  type       String  @unique @db.VarChar(255)
  value      String?
  title      String
  group_code String
}

model Category {
  id           Int           @id @default(autoincrement())
  title        String        @unique @db.VarChar(255)
  content_desc String        @db.Text
  status       status_type
  code         String
  SubCategory  SubCategory[]
}

enum status_type {
  Active
  Inactive
}

model SubCategory {
  id           Int              @id @default(autoincrement())
  title        String           @unique @db.VarChar(255)
  content_desc String?          @db.Text
  status       String
  category_id  Int
  priority     Int
  is_optional  is_optional_type
  group_code   String
  field_id     Int
  cat_code     String
  category     Category         @relation(fields: [category_id], references: [id])
}

enum is_optional_type {
  true  @map("true")
  false @map("false")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstname String
  lastname  String
  phone     String
  gender    gender
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Users")
}

enum gender {
  male
  female
}

